<odoo>
  <data>

    <record model="ir.ui.view" id="view_purchase_order_form_inherit">
      <field name="name">purchase.order.form.inherit</field>
      <field name="model">purchase.order</field>
      <field name="inherit_id" ref="purchase.purchase_order_form" />
      <field name="arch" type="xml">

        <xpath expr="//page[2]/group[1]" position="after">

          <separator string="  " />
          <h1>
            <label for="requisition_ids" string="Requisiciones" />
          </h1>

          <field name="requisition_ids" string="Requisiciones" label="Requisiciones" />

        </xpath>

      </field>
    </record>

  </data>

</odoo>